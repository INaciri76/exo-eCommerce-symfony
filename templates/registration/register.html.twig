{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}
{% block body %}
	<section class="container d-flex justify-content-center mt-5">
		<div class="card shadow-sm p-4" style="width: 100%; max-width: 600px;">
			<h1 class="text-center mb-4">Créer un compte</h1>
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}
			{{ form_start(registrationForm) }}
			<div class="mb-3">
				{{ form_row(registrationForm.email, { label: ' Adresse email ' }) }}

			</div>
			<div class="mb-3">
				{{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
			</div>
			<div class="mb-3">
				{{ form_row(registrationForm.agreeTerms, { label: 'J’accepte les conditions d’utilisation ' }) }}
			</div>
			<button type="submit" class="btn btn-primary w-100 py-2">
				S’inscrire
			</button>
			{{ form_end(registrationForm) }}
			<p class="text-center mt-3">
				Déjà un compte ?
				<a href="{{ path('app_login') }}">Se connecter</a>
			</p>
		</div>
	</section>
{% endblock %}
