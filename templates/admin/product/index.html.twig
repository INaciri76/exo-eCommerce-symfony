{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Gestion des produits</h1>
        <a href="{{ path('admin_product_add') }}" class="btn btn-primary">Ajouter un produit</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price / 100 }} €</td>
                    <td>{{ product.stock }}</td>
                    <td>{{ product.category.name }}</td>

                    <td>
                        <a href="{{ path('admin_product_edit', {id: product.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('admin_product_delete', {id: product.id}) }}" class="btn btn-danger btn-sm"
                           onclick="return confirm('Supprimer ce produit ?');">
                           Supprimer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun produit pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
